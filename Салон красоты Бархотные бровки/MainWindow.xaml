<Window x:Class="Салон_красоты_Бархотные_бровки.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Салон_красоты_Бархотные_бровки"
        mc:Ignorable="d"
        Title="Бархатные бровки" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Image Source="/Resources/beauty_logo.png" HorizontalAlignment="Left" Margin="5"></Image>
            <TextBlock Text="Бархатные бровки" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Button Content="Вернуться" Style="{StaticResource ButtonAccent}" HorizontalAlignment="Right" Margin="0,0,10,0"   Click="Exit"></Button>
        </DockPanel>
        <Frame Grid.Row="1" x:Name="MainFrame"></Frame>
    </Grid>
</Window>
