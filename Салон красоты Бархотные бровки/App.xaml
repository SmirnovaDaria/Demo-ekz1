<Application x:Class="Салон_красоты_Бархотные_бровки.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Салон_красоты_Бархотные_бровки"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonAccent">
            <Setter Property="Button.Background" Value="#FF4A6D"/>
            <Setter Property="Button.Foreground" Value="White"/>
            <Setter Property="Button.Height" Value="30"/>
            <Setter Property="Button.Width" Value="100"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextBlock.FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="TextBox.FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Button.FontFamily" Value="Tahoma"/>
        </Style>
    </Application.Resources>
</Application>
